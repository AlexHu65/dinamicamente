.menu-btn
  position: relative
  display: block
  width: 35px
  height: 30px
  cursor: pointer
  z-index: 1000
  .close-row,
  .close-row:before,
  .menu-row
    position: absolute
    top: 50%
    display: block
    width: 100%
    height: 4px
    border-radius: 1px
.close-row
  left: 50%
  &:before
    content: ""
    top: 0%
    background-color: white
.menu-row
  left: 0
  background-color: white

// menu
.menu-wraper
  position: fixed
  top: 60px
  left: -150px
  z-index: 1000
  transition: .5s ease all
.menu-items
  background: $whiteSmoke2
  position: fixed
  transition: .5s ease all
  height: 100%
  z-index: 2
  left: -100%
  top: 0
// boton1

$T1 = 500ms;
$easing1 = $easeOutBack;

.menu-btn.style-1 {
	transform: rotate(0deg) translateZ(0) scale(1, 1);
	transition: transform calc(500ms/2) $easing1;

	.menu-row {
		transform: rotate(0deg) translateZ(0) scale(1, 1);

		&.top {
			margin-top: -11px;
			transition: transform calc(500ms/2) $easing1 0ms,
							margin calc(500ms/2) $easing1 calc(500ms/2);
		}

		&.mid {
			opacity: 1;
			transition-duration: 0s;
			transition-delay: calc(500ms/2), 0s;
		}

		&.bot {
			margin-top: 11px;
			transition: transform calc(500ms/2) $easing1 0ms,
							margin calc(500ms/2) $easing1 calc(500ms/2);
		}
	}

	&.open {
		transform: rotate(180deg) translateZ(0) scale(1, 1);

		.menu-row {
			&.top {
				margin-top: 0px !important;
				transform: rotate(45deg) translateZ(0) scale(1, 1);
				transition: margin calc(500ms/2) $easing1 0ms,
								transform calc(500ms/2) $easing1 calc(500ms/2);
			}

			&.mid {
				opacity: 0;
				transition-delay: calc(500ms/2), 0s;
			}

			&.bot {
				margin-top: 0px !important;
				transform: rotate(-45deg) translateZ(0) scale(1, 1);
				transition: margin calc(500ms/2) $easing1 0ms,
								transform calc(500ms/2) $easing1 calc(500ms/2);
			}
		}
	}
}

